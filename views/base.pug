doctype html
html
  head
    title You Tell We Sell
    link(rel="icon" href="/static/images/logo1.png" type="image/png")
    block scripts
        script(src='../static/javascripts/cart.js' defer="defer" async)
    block style
  body 
    nav.navbar 
        div.space
        div.first  
            img(src="/static/images/logo1.png")
        div.middle 
            form(action="/api/search",method="post")
                div.full-form 
                    div.full-input 
                        input(type="text",name="search", id="search",placeholder="Search items here")
                    button(class="btn-search")
                        img(src="/static/images/search.png")  
        div.nav-list 
            if(user)
                div(class="dropdown")  
                    button(class="login-btn") My Account
                    div(class="dropdown-content")
                        a(href="/api/profile/"+user.id) My Profile
                        a(href='/api/logout') Logout
            else 
                button(class="login-btn" onclick="window.location.href='/api/login'")
                    | Login         
            div(class="mycart",onclick="window.location.href='/api/cart'")
                img(src="https://img.icons8.com/fluent-systems-filled/48/000000/shopping-cart-loaded.png")
                span(class="span-cart") 0      
            
            div(class="dropdown")
                button(class="login-btn drop-btn") Start Selling
                div(class="dropdown-content")
                    a(href="/api/sell") Sell?
                    a(href="/api/donate") Donate?
 
        div.space          
