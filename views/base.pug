doctype html
html
  head
    title You Tell We Sell
    link(rel="icon" href="/static/images/logo1.png" type="image/png")
    block scripts
    block style
  body 
    nav.navbar 
        div.space
        div.first  
            img(src="/static/images/logo1.png")
        div.middle 
            form(action="/api/search",method="post")
                div.full-form 
                    div.full-input 
                        input(type="text",name="search", id="search",placeholder="Search items here")
                    button(class="btn-search")
                        img(src="/static/images/search.png")  
        div.nav-list 
            button(class="login-btn" onclick="document.getElementById('id02').style.display='block'")
                | Login
            div(class="notification",onclick="document.getElementById('id01').style.display='block'")
                img(src="https://img.icons8.com/material-rounded/24/000000/appointment-reminders.png")
                span(class="notify") 0      
            
            div(class="dropdown")
                button(class="login-btn drop-btn") Start Selling
                div(class="dropdown-content")
                    a(href="/api/sell") Sell?
                    a(href="/api/donate") Donate?
 
        div.space          
    div#id01.modal 
        div.cart-modal 
            span(onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal") &times
            h1 My Cart        
            div.cart-items                      
            button(class="btn cancel-cart" ,id="cart-cancel") Cancel Cart 
   
    div#id02.modal  
        div(class="container-id01")
            div(class="forms-container") 
                div#msg
                    if(message!==null)
                        h2 #{message}
                span(onclick="document.getElementById('id02').style.display='none'" class="close2" title="Close Modal") &times
                div(class="signin-signup")
                    form(action="/api/signin" class="sign-in-form" method="post")
                        h2(class="title") Sign in

                        div(class="input-field")
                            i(class="fas fa-envelope")
                            input(type="email" placeholder="Email",name="email")
            
                        div(class="input-field")
                            i(class="fas fa-lock")
                            input(type="password" placeholder="Password",name="psw")

                        a(href="/api/forgot-password") Forgot Password?  
            
                        input(type="submit" value="Login" class="btn solid")
                        p(class="social-text") Or Sign in with social platforms
                        div(class="social-media")
                            a(href='/api/email' class="social-icon")
                                img(src="https://img.icons8.com/metro/52/000000/facebook-new--v2.png" class="fab fa-facebook-f")
                            a(href='/api/email' class="social-icon")
                                img(src="https://img.icons8.com/android/48/000000/twitter.png" class="fab fa-twitter")
                            a(href='/api/email' class="social-icon")
                                img(src="https://img.icons8.com/material-sharp/48/000000/google-logo.png" class="fab fa-google")
                            a(href='/api/email' class="social-icon")
                                img(src="https://img.icons8.com/android/48/000000/linkedin.png" class="fab fa-linkedin-in")            
            
                    form(action="/api/signup" class="sign-up-form" method="post")
                        h2(class="title") Sign up
                        div(class="input-field")
                            i(class="fas fa-envelope")
                            input(type="email" placeholder="Email",name="email")
            
                        div(class="input-field")
                            i(class="fas fa-lock")
                            input(type="password" placeholder="Password",name="psw")

                        div(class="input-field")
                            i(class="fas fa-lock")
                            input(type="password" placeholder="Confirm Password",name="pswconfirm")    
            
                        input(type="submit" class="btn" value="Sign up")
                        p(class="social-text") Or Sign up with social platforms
                        div(class="social-media")
                            a(href='/api/email' class="social-icon")
                                img(src="https://img.icons8.com/metro/52/000000/facebook-new--v2.png" class="fab fa-facebook-f")
                            a(href='/api/email' class="social-icon")
                                img(src="https://img.icons8.com/android/48/000000/twitter.png" class="fab fa-twitter")
                            a(href='/api/email' class="social-icon")
                                img(src="https://img.icons8.com/material-sharp/48/000000/google-logo.png" class="fab fa-google")
                            a(href='/api/email' class="social-icon")
                                img(src="https://img.icons8.com/android/48/000000/linkedin.png" class="fab fa-linkedin-in")    
            
            div(class="panels-container")
                div(class="panel left-panel")
                    div(class="content")
                        h3 Looks like you're new here!
                        p 
                        | Sign up with your email to get started
            
                        button(class="btn transparent" id="sign-up-btn")
                            | Sign up
                    img(src="../static/images/img/log.svg" class="image" alt="")
        
                div(class="panel right-panel")
                    div(class="content")
                        h3 Login
                        p
                        | Get access to your Orders, Wishlist and Recommendations
            
                        button(class="btn transparent" id="sign-in-btn")
                            | Sign in
                    img(src="../static/images/img/register.svg" class="image" alt="")
                                   
    block content
